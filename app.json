{
  "expo": {
    "name": "parentcare",
    "slug": "parentcare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon-first.png",
      "resizeMode": "contain",
      "backgroundColor": "#75D89A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.parentcare",
      "infoPlist": {
        "NSCameraUsageDescription": "QR 코드를 스캔하기 위해 카메라 권한이 필요합니다."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.parentcare"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "QR 코드를 스캔하기 위해 카메라 권한이 필요합니다."
        }
      ]
    ]
  }
}
